@startuml FixedCreateItemSequence

actor Admin as admin
participant "Menu Page" as menuPage
participant "AddForm" as addForm
participant "Item Model" as itemModel
participant "Database" as db

admin -> menuPage : Navigate to menu
menuPage -> addForm : Render empty form

admin -> addForm : Fill item details\n(name, desc, price, image)
admin -> addForm : Submit form

addForm -> itemModel : validate_on_submit()
alt Validation failed
    addForm --> menuPage : Show errors
else Validation success
    itemModel -> itemModel : new Item(
        name=form.name.data,
        description=form.desc.data,
        price=form.price.data,
        source=form.image.data
    )
    itemModel -> db : session.add(new_item)
    itemModel -> db : session.commit()
    db --> itemModel : Success
    itemModel --> menuPage : Flash("Item created!")
    menuPage -> admin : Redirect to menu
end

@enduml